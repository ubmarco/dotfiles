#!/bin/sh

# activate laptop + right wqhd monitor

if hostname | grep "tux05"; then
	# Lenovo E420s (LVDS-1 is the laptop)
	xrandr --newmode "2560x1440_40"  201.00  2560 2720 2984 3408  1440 1443 1448 1476 -hsync +vsync
	xrandr --addmode HDMI-1 2560x1440_40
	xrandr --output HDMI-1 --mode 2560x1440_400 --pos 1366x0 --primary --output LVDS-1 --mode 1366x768 --pos 0x774
elif hostname | grep "tux07"; then
	# Tuxedo InifinityBook S15 Gen 6
	xrandr --output eDP-1 --mode 1920x1080 --pos 0x1011 --output DP-1 --off --output HDMI-1 --mode 2560x1440 --pos 1920x0 --primary
	# Load panel config
	xfce4-panel-profiles load ~/.dotfiles/unlinked/panel-config/hdmi_r_tux07.tar.bz2
elif hostname | grep "tux01"; then
	# Tuxedo InfinityBook Pro v4
	xrandr --output eDP-1 --mode 1920x1080 --pos 0x980 --output DP-1 --off --output HDMI-2 --mode 2560x1440 --pos 1920x0 --primary
	# Load panel config
	xfce4-panel-profiles load ~/.dotfiles/unlinked/panel-config/hdmi_r.tar.bz2
else
	echo "Hostname ${hostname} unknown"
	exit 1
fi


# Arrange desktop icons
xfdesktop -A

