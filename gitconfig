[user]
    name = Marco Heinemann
    email = Marco.Heinemann@partner.bmw.de

[core]
    editor = vim
    excludesfile = ~/.gitignore_global
	autocrlf = input

[color]
    ui = true

[push]
    default = simple

[alias]
    s = status -b -s
    co = checkout
    l = log --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s' --date=short --date=relative --graph --decorate --all
    bv = branch -avv
    dd = difftool -d
    reviewme = push origin HEAD:refs/for/master
    cl = clean -fxd -e .idea -e .env

[include]
    path = ~/.gitconfig_review

[diff]
	tool = bcomp

[credential]
    helper = cache --timeout=3600

[difftool]
	bcomp = trustExitCode
[difftool "bcomp"]
	cmd = bcompare $LOCAL $REMOTE
