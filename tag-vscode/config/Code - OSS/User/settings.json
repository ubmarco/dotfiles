{
    "files.autoSave": "afterDelay",
    "files.associations": {
        "*.arxml": "xml",
        "*.spec": "python",
    },
    "editor.largeFileOptimizations": false,
    "xmlTools.enableXmlTreeViewCursorSync": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.rulers": [
        120
    ],
    "workbench.tree.indent": 16,
    "workbench.tree.renderIndentGuides": "always",
    "window.zoomLevel": 0.5,
    "editor.mouseWheelZoom": true,
    "window.titleBarStyle": "custom",
    "restructuredtext.linter.extraArgs": [
        "--max-line-length",
        "120"
    ],
    "restructuredtext.linter.run": "onSave",
    "restructuredtext.updateDelay": 5000,
    "restructuredtext.updateOnTextChanged": "false",
    "python.formatting.blackArgs": [
        "--line-length",
        "120",
        "--skip-string-normalization",
        "--target-version",
        "py38"
    ],
    // "python.jediEnabled": true,
    // "python.jediPath": "/home/marco/bmw/git/ascgit307.arxmlpatcher/.venv/lib/python3.7/site-packages/jedi/",
    "editor.formatOnSave": true,
    "terminal.integrated.fontFamily": "Source Code Pro",
    "editor.fontFamily": "Source Code Pro",
    "autoDocstring.docstringFormat": "sphinx",
    "python.formatting.provider": "yapf",
    "editor.wordWrapColumn": 120,
    "python.workspaceSymbols.exclusionPatterns": [
        "**/site-packages/**",
        ".venv"
    ],
    "python.linting.mypyEnabled": true,
    "C_Cpp.updateChannel": "Insiders",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "git.autofetch": true,
    "git.confirmSync": false,
    "importMagic.maxColumns": 120,
    "python.defaultInterpreterPath": ".venv/bin/python",
    "files.exclude": {
        "**/__pycache__": true
    },
    "diffEditor.ignoreTrimWhitespace": false,
}